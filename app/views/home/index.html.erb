    <% def overallData(tiempo, kind) %>
    <% require 'json' %>
    <% require 'net/http' %>
    <% url = 'https://touch-rate.com/o/analytics/dashboard?api_key='+ENV["API_KEY"]+'&app_id='+ENV["APP_ID"]%>
